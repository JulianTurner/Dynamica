<reactiveUi:ReactiveWindow
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:Dynamica.Shell.ViewModels"
    xmlns:reactiveUi="clr-namespace:Avalonia.ReactiveUI;assembly=Avalonia.ReactiveUI"
    x:Class="Dynamica.Shell.Views.MainWindow"
    x:TypeArguments="vm:MainWindowViewModel"
    x:DataType="vm:MainWindowViewModel"
    x:CompileBindings="True">

    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="220,Auto,*,48">

        <!-- … oben Menü, Mitte etc. … -->

        <!-- Activity Bar via ViewModelViewHost -->
        <reactiveUi:ViewModelViewHost Grid.Row="1" Grid.Column="0"
                                      ViewModel="{Binding ActivityBarVM}" />

        <!-- Statusbar via ViewModelViewHost -->
        <reactiveUi:ViewModelViewHost Grid.Row="2" Grid.ColumnSpan="4"
                                      ViewModel="{Binding StatusBarVM}" />

    </Grid>
</reactiveUi:ReactiveWindow>
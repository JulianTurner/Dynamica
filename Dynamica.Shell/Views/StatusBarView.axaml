<reactiveUi:ReactiveUserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:Dynamica.Shell.ViewModels"
    xmlns:reactiveUi="clr-namespace:Avalonia.ReactiveUI;assembly=Avalonia.ReactiveUI"
    x:Class="Dynamica.Shell.Views.StatusBarView"
    x:TypeArguments="vm:StatusBarViewModel"
    x:DataType="vm:StatusBarViewModel"
    x:CompileBindings="True">

    <reactiveUi:ReactiveUserControl.DataContext>
        <ReflectionBinding Path="ViewModel"/>
    </reactiveUi:ReactiveUserControl.DataContext>

    <!-- Optionales Design-VM fÃ¼r den Previewer -->
    <Design.DataContext>
        <vm:StatusBarViewModel />
    </Design.DataContext>

    <Border Padding="6,4">
        <Grid ColumnDefinitions="*,Auto" VerticalAlignment="Center">
            <!-- Kinder binden compiled an das (typisierte) DataContext = StatusBarViewModel -->
            <TextBlock Grid.Column="0"
                       Text="{Binding Message}"
                       TextTrimming="CharacterEllipsis"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
            </StackPanel>
        </Grid>
    </Border>
</reactiveUi:ReactiveUserControl>